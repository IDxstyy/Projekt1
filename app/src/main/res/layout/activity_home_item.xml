<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/home_cardView"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        app:cardBackgroundColor="@color/thm_grÃ¼n">

        <!--
        Folgende IDs (bis auf die der ImageView sind
        nur zur Orientierung im Design
        -->



        <LinearLayout
            android:id="@+id/containsPicAndChatID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/containsPIC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="360dp">

                    <ImageView
                        android:id="@+id/chat_picture"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@mipmap/ic_launcher_round"
                        android:layoutDirection="inherit" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout

                android:id="@+id/chatLayout"
                android:layout_marginStart="6dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                <TextView
                    android:id="@+id/home_textView_chat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:text="Chat: XXX"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="normal" />

                    <TextView
                        android:id="@+id/lastMessageTime"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAlignment="viewEnd"
                        android:layout_marginEnd="5dp"
                        android:text="xx:xx"
                        android:maxLines="1"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1.8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Last massage"
                    />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="12dp"
        android:background="@color/light_black"/>

</LinearLayout>